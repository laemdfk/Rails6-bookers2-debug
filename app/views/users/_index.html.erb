<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
       <tr>
        <td>
        <% if @user.profile_image.attached? %>
         <%= image_tag @user.profile_image, size: "80x80" %>
       <% else %>
         <%= image_tag 'no_image.jpeg', size: "80x80" %>
       <% end %>
       </td>
        <td><%#= image_tag user.profile_image, size: '50x50' %></td>
        <td><%= @user.name %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
