<table class='table'>
   <tr>
        <td>
        <% if @user.profile_image.attached? %>
         <%= image_tag @user.profile_image, size: "80x80" %>
       <% else %>
         <%= image_tag 'no_image.jpeg', size: "80x80" %>
      <% end %>
       </td>
      </tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
	</tr>
	
	<tr>
	 <th>followes</th>
   <th><%#= link_to "followes", user_followers_path %></th>
  </tr>
    
  <tr>
   <th>followers</th>
   <th><%#= link_to"followers",user_followings_path %></th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_#{@user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>