<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
        <% if @user.profile_image.attached? %>
         <%= image_tag @user.profile_image, size: "80x80" %>
       <% else %>
         <%= image_tag 'no_image.jpeg', size: "80x80" %>
      <% end %>
      </td>
        <td>
          <%= link_to(book.user) do %>
          <%#= image_tag @book.user.profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td>
         <% if book.favorited_by?(current_user) %>
          <%= link_to book_favorites_path(@book), method: :delete do %>
          <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
          <%= book.favorites.count %> いいね
         <% end %>
         <% else %>
          <i class="fas fa-heart" aria-hidden="true"></i>
          <%= book.favorites.count %> いいね
         <% end %>
        </td>
         <td>
          <% if current_user != @user %>
           <% if current_user.following?(@user) %>
            <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn-sm btn-danger" %>
          <% else %>
           <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class:"btn-sm btn-success" %>
         <% end %>
         </td>
          <td><p class="caption"><%= "#{book.committed!} コメント" %></p></td>
       <% end %>
    </tbody>
  <% end %>
</table>