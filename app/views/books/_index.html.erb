<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
        <% if @user.profile_image.attached? %>
         <%= image_tag @user.profile_image, size: "80x80" %>
       <% else %>
         <%= image_tag 'no_image.jpeg', size: "80x80" %>
      <% end %>
      </td>
        <td>
          <%= link_to(book.user) do %>
          <%#= image_tag @book.user.profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        
        <% if @book.favorite?(current_user) %>
        <td>
          <%= link_to favorite_create_path(@book.id), method: :delete do %>
        <span style="color:red;">❤︎</span>
        </td>
        <% end %>
       <% else %>
       <td>
        <%= link_to favorite_destroy_path(@book.id), method: :post do %>
       <span>❤︎</span>
     <% end %>
     </td>
    <% end %>
      </tr>
    <% end %>
  </tbody>
</table>