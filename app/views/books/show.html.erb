<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new,user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tbody>
  		   <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>

          <% if @book.favorite?(current_user) %>
        <td>
          <%= link_to favorite_create_path(@book.id), method: :delete do %>
        <span style="color:red;">❤いいね︎</span>
        </td>
        <% end %>

       <% else %>
       <td>
        <%= link_to favorite_destroy_path(@book.id), method: :delete do %>
       <span style="color:blue;">❤いいね︎</span>
     <% end %>
     </td>
     <td>
        <td>コメント数: <%= @book.book_comments.count %></td>
          <td><%= render "favorites/btn", book: @book %></td>
          <div class="d-flex">
            <%#= @book_comment.comment %>
            <%# if @book_comment.user == current_user %>
            <div class="comment-delete">
              <%#= link_to "削除", book_comment_path(comment.book, comment), method: :delete, class: "btn-sm btn-danger" %>
          </div>
        </div>
        <%# end %>
        <%# end %>
     </td>
    <% end %>
        </tr>
      </tbody>
      </table>
      
      
  <div class='col-md-8 offset-md-1'>
    <tbody>
      <table>
       <tr>
        <td>
        <%#= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <%= text_area :comment,placeholder: "コメントする" %>
        <%= submit_tag "create comment", class: "btn btn-success mb-4" %>
        <%# end %>
        </td>
      </tr>
    </div>
       </tbody>
      </table>
    </div>
  </div>
</div>